<div class="main users-new">
  <div class="container">
    <div class="form-heading">ログイン</div>
    <div class="form users-form">
      <div class="form-body">
        <% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
        <% end %>
        <%= form_tag("/login") do %>
          <p>メールアドレス</p>
          <input name="email" value="<%= @email %>" placeholder="tsubuyaki@sample.jp">
          <p>パスワード</p>
          <input type="password" name="password" placeholder="more than 8 characters">
          <input type="submit" value="ログイン">
        <% end %>
      </div>
    </div>
  </div>
</div>