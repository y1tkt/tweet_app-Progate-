<div class="main users-edit">
  <div class="container">
    <div class="form-heading">ユーザー情報の編集</div>
    <div class="form users-form">
      <div class="form-body">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        <%= form_tag("/users/#{@user.id}/update", {multipart: true}) do %>
          <p>ユーザー名</p>
          <input name="name" value="<%= @user.name %>" placeholder="つぶやき太郎">
          <p>アカウントID</p>
          <input name="account_id" value="<%= @user.account_id %>" placeholder="@tsubuyaki_Taro">
          <p>画像</p>
          <input name="image" type="file">
          <p>メールアドレス</p>
          <input name="email" value="<%= @user.email %>" placeholder="tsubuyaki@sample.jp">
          <input type="submit" value="保存">
        <% end %>
      </div>
    </div>
  </div>
</div>